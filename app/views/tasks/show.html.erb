<h1><%= @task.title %></h1>
<h3> <%= @task.details %></h3>

<% if @task.completed %>
  <input checked type="checkbox" name="completed" disabled="disabled">
  <a>This task is completed yet</a>
<% else %>
  <input type="checkbox" name="completed" disabled="disabled">
  <a>This task is not completed</a>
<% end %>
<%= link_to "Task edit", edit_task_path %><br>
<%= link_to "Back to home", tasks_path %>